  <content><![CDATA[- name: ${1:Manage storage pool on Unity}
  dellemc.unity.storagepool:
    pool_name: ${2:# Name of the storage pool, unique in the storage system}
    pool_id: ${3:# Unique identifier of the pool instance}
    new_pool_name: ${4:# New name of the storage pool, unique in the storage system}
    pool_description: ${5:# The description of the storage pool}
    fast_cache: ${6:# Indicates whether the fast cache is enabled for the storage pool}
    fast_vp: ${7:# Indicates whether to enable scheduled data relocations for the pool}
    raid_groups: ${8:# Parameters to create RAID group from the disks and add it to the pool}
    alert_threshold: ${9:# Threshold at which the system will generate alerts about the free space in the pool, specified as a percentage}
    is_harvest_enabled: ${10:# Enable/Disable automatic deletion of snapshots based on pool space usage}
    pool_harvest_high_threshold: ${11:# Max threshold for space used in pool beyond which the system automatically starts deleting snapshots in the pool}
    pool_harvest_low_threshold: ${12:# Min threshold for space used in pool below which the system automatically stops deletion of snapshots in the pool}
    is_snap_harvest_enabled: ${13:# Enable/Disable automatic deletion of snapshots based on pool space usage}
    snap_harvest_high_threshold: ${14:# Max threshold for space used in snapshot beyond which the system automatically starts deleting snapshots in the pool}
    snap_harvest_low_threshold: ${15:# Min threshold for space used in snapshot below which the system will stop automatically deleting snapshots in the pool}
    pool_type: ${16:# Indicates storage pool type}
    state: ${17:# Define whether the storage pool should exist or not}
    unispherehost: ${18:# IP or FQDN of the Unity management server}
    username: ${19:# The username of the Unity management server}
    password: ${20:# The password of the Unity management server}
    validate_certs: ${21:# Boolean variable to specify whether or not to validate SSL certificate}
    port: ${22:# Port number through which communication happens with Unity management server}
