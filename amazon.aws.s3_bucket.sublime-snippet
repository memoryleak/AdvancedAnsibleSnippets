    encryption: ${13:# Describes the default server-side encryption to apply to new objects in the bucket}
    encryption_key_id: ${14:# KMS master key ID to use for the default encryption}
    endpoint_url: ${15:# URL to connect to instead of the default AWS endpoints}
    force: ${16:# When trying to delete a bucket, delete all keys (including versions and delete markers) in the bucket first (an S3 bucket must be empty for a successful deletion)}
