    purge_tags: ${25:# If O(purge_tags=true) and O(tags) is set, existing tags will be purged from the resource to match exactly what is defined by O(tags) parameter}
    region: ${26:# The AWS region to use}
    requester_pays: ${27:# With Requester Pays buckets, the requester instead of the bucket owner pays the cost of the request and the data download from the bucket}
    secret_key: ${28:# AWS secret access key}
    session_token: ${29:# AWS STS session token for use with temporary credentials}
    state: ${30:# Create or remove the S3 bucket}
    tags: ${31:# A dictionary representing the tags to be applied to the resource}
