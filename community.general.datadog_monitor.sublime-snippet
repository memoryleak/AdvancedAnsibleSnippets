    notify_audit: ${17:# Whether tagged users will be notified on changes to this monitor}
    thresholds: ${18:# A dictionary of thresholds by status}
    locked: ${19:# Whether changes to this monitor should be restricted to the creator or admins}
    require_full_window: ${20:# Whether this monitor needs a full window of data before it gets evaluated}
    new_host_delay: ${21:# A positive integer representing the number of seconds to wait before evaluating the monitor for new hosts}
    evaluation_delay: ${22:# Time to delay evaluation (in seconds)}
    id: ${23:# The ID of the alert}
    include_tags: ${24:# Whether notifications from this monitor automatically inserts its triggering tags into the title}
    priority: ${25:# Integer from 1 (high) to 5 (low) indicating alert severity}
