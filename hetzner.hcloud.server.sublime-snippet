    id: ${11:# ID of the Hetzner Cloud Server to manage}
    image: ${12:# Hetzner Cloud Image (name or ID) to create the server from}
    image_allow_deprecated: ${13:# Allows the creation of servers with deprecated images}
    ipv4: ${14:# Hetzner Cloud Primary IPv4 (name or ID) to use}
    ipv6: ${15:# Hetzner Cloud Primary IPv6 (name or ID) to use}
    labels: ${16:# User-defined labels (key-value pairs)}
    location: ${17:# Hetzner Cloud Location (name or ID) to create the server in}
    name: ${18:# Name of the Hetzner Cloud Server to manage}
    placement_group: ${19:# Hetzner Cloud Placement Group (name or ID) to create the server in}
    private_networks: ${20:# List of Hetzner Cloud Networks (name or ID) the server should be attached to}
    rebuild_protection: ${21:# Protect the Server for rebuild}
    rescue_mode: ${22:# Add the Hetzner rescue system type you want the server to be booted into}
    server_type: ${23:# Hetzner Cloud Server Type (name or ID) of the server}
    ssh_keys: ${24:# List of Hetzner Cloud SSH Keys (name or ID) to create the server with}
    state: ${25:# State of the server}
    upgrade_disk: ${26:# Resize the disk size, when resizing a server}
    user_data: ${27:# User Data to be passed to the server on creation}
